{% extends "admin/layout.njk" %}

{% block head %}

    <title>{{recipe.title}}</title>
    <link rel="stylesheet" href="/admin/show.css">

{% endblock %} 

{% block content %}
    <div class="details-container">
        <div class="edit-box">
            <h2 class="details-h2">Receita: {{recipe.title}}</h2>
            <div>
                <a class="adminBtn" href="/admin/recipes/{{recipe.id}}/edit">Editar Receita</a>
            </div>
        </div>

        <div class="presentation-box">
            <img class="presentation-img" src="{{recipe.image}}" alt="{{recipe.title}}">
            <h1 class="details-h1">{{recipe.title}}</h1>
            <small class="presentation-author">por {{recipe.author}}</small>
        </div>
        
        <div class="details-box">
            <h2 class="details-h2">Ingredientes</h2>
            <ul id="details-ul" class="details-list">
                {%for ingredient in recipe.ingredients %}
                    <li>- {{ingredient}}</li>

                {% endfor %}
            </ul>   
        </div>

        <div class="details-box">
            <h2 class="details-h2">Modo de Preparo</h2>
            <ul id="details-ul" class="details-list">
                {%for preparation in recipe.preparation %}
                    <li>- {{preparation}}</li>

                {% endfor %}
            </ul>   
        </div>

        <div class="details-box">
            <h2 class="details-h2">Informações Adicionais</h2>
            <p id="extrainfo-p" class="details-p">{{recipe.information}}</p>
        </div>
    </div>

{% endblock %} 
